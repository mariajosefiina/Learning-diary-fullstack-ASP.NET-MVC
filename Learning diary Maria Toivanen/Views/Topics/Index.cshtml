@model IEnumerable<Learning_diary_Maria_Toivanen.Models.Topic>



@{ ViewData["Title"] = "Index"; }

         
<table class="table" id="topiclist">
    <thead>
    
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Estimated time to master
            </th>
            <th>
                Time spent
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Source)
            </th>
            <th>
                Starting date
            </th>
            <th>
                Completion date
            </th>
            <th>
                Topic in progress
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeToMaster)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeSpent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Source)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartLearningDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompletionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InProgress)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    
</table>
            

<button type="button" class="custom-button" id="contact-button" onclick= "window.location.href='https://localhost:44366/Topics/Create';")>Create New</></button>

